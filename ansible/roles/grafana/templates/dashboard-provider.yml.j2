apiVersion: 1

providers:
  - name: 'Homelab Dashboards'
    orgId: 1
    folder: ''
    type: file
    disableDeletion: false
    updateIntervalSeconds: 10
    allowUiUpdates: true
    options:
      path: /etc/grafana/provisioning/dashboards/dashboards
      foldersFromFilesStructure: false
    # Handle datasource template variables by mapping to default datasource
    foldersFromFilesStructure: false